{
    "compilerOptions": {
        // File Layout
        "rootDir": "./src",
        "outDir": "./dist",
        // Environment Settings
        "module": "nodenext",
        "target": "esnext",
        "lib": [
            "esnext"
        ],
        "types": [
            "node"
        ],
        // Other Outputs
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        // Stricter Typechecking Options
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        // Recommended Options
        "strict": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true,
    }
}
